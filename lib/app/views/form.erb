<form action='/<%= idea.id %>' method='POST'>
  <p>
    <% if idea.id %>
      Edit your Idea:
    <% else %>
      Your Idea:
    <% end %>
  </p>
  <% if idea.id %>
    <input type="hidden" name="_method" value="PUT" />
  <% end %>
  <input type='text' name='idea[title]' value="<%= idea.title %>"/> Name <br/>
  <textarea name='idea[description]'><%= idea.description %></textarea> Description <br/>
  <textarea name='idea[tags]'><%= idea.tags %></textarea> Tag <br/>

  <select name="idea[groups]">
  <option value="Groupless">Groupless</option>
  <option value="Travel">Travel</option>
  <option value="Home and Garden">Home and Garden</option>
  <option value="Culinary">Culinary</option>
  <option value="Business">Business</option>
  <option value="Shopping">Shopping</option>
  <option value="Fitness">Fitness</option>
  <option value="Health and Wellness">Health and Wellness</option>
</select><br/>

  <input type='submit'/>
</form>

<form action='/lookup' method='GET'>
<input type= 'text' name = 'lookup'>
<input type='submit' value ='Search by Keyword or Phrase'/>
</form>

<form action = '/groups' method='GET' style='display: inline'>
 <select name="groups">
  <option value="Groupless">Groupless</option>
  <option value="Travel">Travel</option>
  <option value="Home and Garden">Home and Garden</option>
  <option value="Culinary">Culinary</option>
  <option value="Business">Business</option>
  <option value="Shopping">Shopping</option>
  <option value="Fitness">Fitness</option>
  <option value="Health and Wellness">Health and Wellness</option>
</select>
<input type='submit' value ='Search by Group'/>
</form>


<form action='/tags' method='GET'>
<button type='submit'>Tags</button>
</form>

<form action = '/dates'>
  <select name="search_day">
  <option value="Sunday">Sunday</option>
  <option value="Monday">Monday</option>
  <option value="Tuesday">Tuesday</option>
  <option value="Wednesday">Wednesday</option>
  <option value="Thursday">Thursday</option>
  <option value="Friday">Friday</option>
  <option value="Saturday">Saturday</option>
</select>
<button type='submit'>See ideas by day!</button>
</form>


</form>



